{
  "name": "@charisma-ai/react",
  "version": "3.4.0",
  "description": "Charisma.ai chat component for React",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/charisma-ai/charisma-react",
  "author": "charisma.ai <ben@charisma.ai>",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build:non-umd": "microbundle --format modern,es,cjs --compress false --jsx React.createElement --jsxFragment React.Fragment",
    "build:umd": "microbundle --format umd --name CharismaReact --external react --jsx React.createElement --jsxFragment React.Fragment --alias httpie=./node_modules/httpie/xhr/index.js",
    "build": "yarn run build:non-umd && yarn run build:umd",
    "cm": "git-cz",
    "lint": "eslint --fix --ext js,ts,tsx .",
    "prebuild": "rimraf dist",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "@charisma-ai/sdk": "^3.6.1",
    "immutability-helper": "^3.1.1",
    "p-queue": "^6.6.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
