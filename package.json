{
  "name": "@charisma-ai/react",
  "version": "3.2.0",
  "description": "Charisma.ai chat component for React",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/charisma-ai/charisma-react",
  "author": "charisma.ai <ben@charisma.ai>",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build:non-umd": "microbundle --format modern,es,cjs --compress false --jsx React.createElement --jsxFragment React.Fragment",
    "build:umd": "microbundle --format umd --name CharismaReact --external react --jsx React.createElement --jsxFragment React.Fragment --alias httpie=./node_modules/httpie/xhr/index.js",
    "build": "yarn run build:non-umd && yarn run build:umd",
    "cm": "git-cz",
    "lint": "eslint --fix --ext js,ts,tsx .",
    "prebuild": "rimraf dist",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "@charisma-ai/sdk": "^3.3.0-alpha.1",
    "immutability-helper": "^3.1.1",
    "p-queue": "^6.6.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "microbundle": "^0.13.3",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.0",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
