{
  "name": "@charisma-ai/react",
  "version": "1.0.2",
  "description": "Charisma.ai chat component for React",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/charisma-ai/charisma-react",
  "author": "charisma.ai <ben@charisma.ai>",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc && rollup -c && rimraf compiled",
    "cm": "git-cz",
    "lint": "tslint src/*.ts src/*.tsx",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@charisma-ai/sdk": "^1.0.4",
    "immutability-helper": "^3.0.1"
  },
  "devDependencies": {
    "@types/react": "^16.8.19",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "commitizen": "^3.1.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{ts,tsx}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
